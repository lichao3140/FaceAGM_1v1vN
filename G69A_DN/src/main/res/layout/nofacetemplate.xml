<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/bg_ts_layout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_ts">

        <TextView
            android:id="@+id/onevsmore_dialog_showmsg"
            android:textSize="50px"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请刷身份证"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/onevsmore_dialog"
        android:layout_marginBottom="-25px"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bg_ts_layout"
        android:layout_width="205px"
        android:layout_height="72px"
        android:src="@mipmap/icon_ts"/>

</RelativeLayout>
