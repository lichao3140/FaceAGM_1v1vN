<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/alertbg"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/comperFacebm"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="@drawable/boder" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VS"
                android:textColor="#00dbfe"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/comperCardbm"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="228dp"
            android:layout_below="@id/cardLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/idcardpic"
                android:layout_width="360dp"
                android:layout_height="228dp"
                android:background="@mipmap/card"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="40dp"
                android:text="X  X"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/name"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:text="x"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/sex"
                android:layout_alignTop="@id/name"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="25dp"
                android:text="x  x"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/sex"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="27dp"
                android:text="xxxx"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/year"
                android:layout_alignTop="@id/sex"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="27dp"
                android:text="xx"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/month"
                android:layout_alignTop="@id/sex"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="27dp"
                android:text="xx"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/addr"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/year"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="27dp"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.2"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxx"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cardNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/addr"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="70dp"
                android:text="xxx*************xx"
                android:textColor="#000000"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="102dp"
                android:layout_height="126dp"
                android:layout_alignLeft="@id/day"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:background="@drawable/boder" />
        </RelativeLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="114dp"
            android:layout_height="42dp"
            android:layout_below="@id/cardLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:background="@mipmap/bg_xm"
            android:gravity="center"
            android:text="Name"
            android:textColor="#00dbfe"
            android:textSize="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/isSuccessComper"
        android:layout_width="240dp"
        android:layout_height="98dp"
        android:layout_above="@id/layout_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-40dp" />

    <!-- 比对通过信息end -->

</RelativeLayout>